<?xml version="1.0" encoding="utf-8"?>
  <ScrollView  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.example.hp.play_signup.completeProfile"
    android:background="#2f4f4f"
    android:layout_height="match_parent"
    android:layout_width="wrap_content">
        <RelativeLayout
            android:layout_height="match_parent"
            android:layout_width="match_parent">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text="Choose a Sport to Find  "
                android:gravity="center"
                android:textStyle="bold"
                android:textColor="#000"
                android:id="@+id/tv0"
                android:textSize="30dp"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:text="OUTDOOR GAMES"
                android:gravity="center"
                android:textStyle="bold"
                android:textColor="#000"
                android:id="@+id/tv1"
                android:layout_below="@+id/tv0"
                />
            <Button
                android:layout_width="140dp"
                android:layout_height="50dp"
                android:layout_below="@id/tv1"
                android:id="@+id/cricket"
                android:layout_marginLeft="30dp"
                android:text="cricket"/>
            <Button
                android:layout_width="140dp"
                android:layout_height="50dp"
                android:layout_below="@id/tv1"
                android:layout_alignLeft="@id/cricket"
                android:layout_marginLeft="180dp"
                android:layout_marginRight="30dp"
                android:id="@+id/football"
                android:text="football"
                />
            <Button
                android:layout_width="140dp"
                android:layout_height="50dp"
                android:layout_below="@id/Hockey"
                android:layout_marginLeft="30dp"
                android:id="@+id/basketball"
                android:text="basketball"
                android:layout_marginTop="30dp"
                />
            <Button
                android:layout_width="140dp"
                android:layout_height="50dp"
                android:layout_below="@+id/cricket"
                android:layout_marginTop="30dp"
                android:id="@+id/Hockey"
                android:text="hockey"
                android:layout_marginLeft="30dp"/>
            <Button
                android:layout_width="140dp"
                android:layout_height="50dp"
                android:layout_below="@+id/football"
                android:layout_marginTop="30dp"
                android:id="@+id/tennis"
                android:layout_alignLeft="@+id/Hockey"
                android:layout_marginLeft="180dp"
                android:text="hockey"
               />
            <Button
                android:layout_width="140dp"
                android:layout_height="50dp"
                android:layout_below="@+id/Hockey"
                android:layout_marginTop="30dp"
                android:id="@+id/kabaddi"
                android:layout_alignLeft="@+id/basketball"
                android:layout_marginLeft="180dp"
                android:text="kabaddi"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:text="INDOOR GAMES"
                android:gravity="center"
                android:textStyle="bold"
                android:textColor="#000"
                android:id="@+id/tv2"
                android:layout_below="@+id/kabaddi"
                />
            <Button
                android:layout_width="140dp"
                android:layout_height="50dp"
                android:layout_below="@id/tv2"
                android:id="@+id/carrom"
                android:text="carrom"
                android:layout_marginLeft="30dp"

                />
            <Button
                android:layout_width="140dp"
                android:layout_height="50dp"
                android:layout_below="@id/tv2"
                android:layout_alignLeft="@id/carrom"
                android:layout_marginLeft="180dp"
                android:id="@+id/snooker"
                android:text="snooker"

                />

            <Button
                android:layout_width="140dp"
                android:layout_height="50dp"
                android:layout_below="@+id/carrom"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="30dp"
                android:id="@+id/volleyball"
                android:text="volleyball"/>
            <Button
                android:layout_width="140dp"
                android:layout_height="50dp"
                android:layout_below="@+id/snooker"
                android:layout_marginTop="10dp"
                android:id="@+id/tt"
                android:layout_alignLeft="@+id/volleyball"
                android:layout_marginLeft="180dp"
                android:text="tabletennis"/>

            <Button
                android:layout_width="140dp"
                android:layout_height="50dp"
                android:layout_below="@+id/volleyball"
                android:layout_marginTop="5dp"
                android:id="@+id/swimming"
                android:text="swimming"
                android:layout_marginLeft="30dp"/>
            <Button
                android:layout_width="140dp"
                android:layout_height="50dp"
                android:layout_below="@id/swimming"
                android:layout_marginLeft="30dp"
                android:id="@+id/chess"
                android:text="chess"
                />
            <Button
                android:layout_width="140dp"
                android:layout_height="50dp"

                android:layout_marginTop="5dp"
                android:id="@+id/badminton"
                android:layout_alignLeft="@+id/chess"
                android:layout_marginLeft="180dp"
                android:text="badminton"
                android:layout_below="@+id/swimming"/>
            <Button
                android:layout_width="140dp"
                android:layout_height="50dp"
                android:layout_alignLeft="@+id/swimming"
                android:layout_below="@+id/tt"
                android:layout_marginTop="5dp"
                android:id="@+id/skating"
                android:text="skating"
                android:layout_marginLeft="180dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:text="ALL OTHER HOBBIES"
                android:gravity="center"
                android:textStyle="bold"
                android:textColor="#000"
                android:id="@+id/tv3"
                android:layout_below="@+id/chess"
                />
            <Button
                android:layout_width="140dp"
                android:layout_height="50dp"
                android:layout_below="@id/tv3"
                android:id="@+id/dance"
                android:text="dance"
                android:layout_marginLeft="30dp"/>
            <Button
                android:layout_width="140dp"
                android:layout_height="50dp"
                android:layout_below="@id/tv3"
                android:layout_alignLeft="@id/dance"
                android:layout_marginLeft="180dp"
                android:id="@+id/music"
                android:text="music"
                />

            <Button
                android:layout_width="140dp"
                android:layout_height="50dp"
                android:layout_below="@+id/dance"
                android:layout_marginTop="10dp"
                android:id="@+id/finearts"
                android:text="finearts"
                android:layout_marginLeft="30dp"/>
            <Button
                android:layout_width="140dp"
                android:layout_height="50dp"
                android:layout_below="@+id/dance"
                android:layout_marginTop="10dp"
                android:id="@+id/athletics"
                android:layout_alignLeft="@+id/finearts"
                android:layout_marginLeft="180dp"
                android:text="athletics"/>

            <Button
                android:layout_width="140dp"
                android:layout_height="50dp"
                android:layout_below="@+id/finearts"
                android:layout_marginTop="5dp"
                android:id="@+id/travelling"
                android:text="travelling"
                android:layout_marginLeft="30dp"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_below="@+id/finearts"
                android:layout_marginTop="10dp"
                android:id="@+id/computergames"
                android:text="computer games"
                android:layout_marginLeft="210dp"/>
            <Button
                android:layout_width="140dp"
                android:layout_height="50dp"
                android:layout_below="@id/computergames"
                android:id="@+id/trecking"
                android:text="trecking"
                android:layout_marginLeft="210dp"
                android:layout_marginTop="8dp"
                />
            <Button
                android:layout_width="140dp"
                android:layout_height="50dp"
                android:layout_below="@+id/travelling"
                android:layout_marginTop="10dp"
                android:id="@+id/watergames"
                android:layout_marginLeft="30dp"
                android:text="watergames"/>
</RelativeLayout>
        </ScrollView>



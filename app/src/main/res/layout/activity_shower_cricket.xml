<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    tools:context="com.example.hp.play_signup.gamesShower"
    android:orientation="horizontal">
<RelativeLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <ListView
        android:id="@+id/listview1"
        android:layout_width="136dp"
        android:layout_height="wrap_content">
    </ListView>
    <ListView
        android:id="@+id/listview2"
        android:layout_width="136dp"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/listview1"
        android:layout_toRightOf="@+id/listview1">
    </ListView>

    <ListView
        android:id="@+id/listview3"
        android:layout_width="136dp"
        android:layout_height="wrap_content">
        android:layout_toEndOf="@+id/listview2"
        android:layout_toRightOf="@+id/listview2">
</ListView>
    <ListView
        android:id="@+id/listview4"
        android:layout_width="136dp"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/listview3"
        android:layout_toRightOf="@+id/listview3">
    </ListView>
</RelativeLayout>
</ScrollView>

